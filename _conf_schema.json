{
  "split_mode": {
    "description": "分段识别模式。",
    "hint": "Regex: 使用正则表达式匹配; Simple: 使用指定字符匹配。",
    "type": "string",
    "options": ["regex", "simple"],
    "default": "regex"
  },
  "split_chars": {
    "description": "简单模式下的分段字符。文字后面带这些符号就会分段",
    "hint": "仅分段模式为simple 时生效。输入想要分段的符号（换行是\\n，空格是\\s），如：，。？！\\n",
    "type": "string",
    "default": "。？！?!；;\\n"
  },
  "split_regex": {
    "description": "正则模式下的表达式。",
    "hint": "仅在分段模式为 regex 时生效。",
    "type": "string",
    "default": "[。？！?!\\n…\\s]+"
  },
  "clean_regex": {
    "description": "分段后清理内容的正则表达式。",
    "type": "string",
    "default": ""
  },
  "max_segments": {
    "description": "最大分段数量。",
    "type": "int",
    "default": 7
  },
  "max_length_no_split":{
    "description":"分段阈值",
    "type": "int",
    "default": 0
  },
  "enable_smart_split": {
    "description": "是否开启智能识别(忽略引号内标点)。",
    "type": "bool",
    "default": true
  },
  "enable_reply": {
    "description": "是否保留回复引用。",
    "hint": "开启后，将在第一段消息中引用用户的原消息；关闭则不引用。",
    "type": "bool",
    "default": true
  },
  "split_scope":{
    "description": "分段内容",
    "hint": "默认只对LLM生成内容进行分段，可选择把插件输出也一起切了（我切我切我切！）",
    "type": "string",
    "options": ["llm_only", "all"],
    "default": "llm_only"
  },
  "image_strategy": {
    "description": "图片组件的分段策略。",
    "hint": "单独: 单独一条消息; 跟随下段: 跟随下一段文字; 跟随上段: 跟随上一段文字; 嵌入: 视为普通字符嵌入。",
    "type": "string",
    "options": ["单独", "跟随下段", "跟随上段", "嵌入"],
    "default": "单独"
  },
  "at_strategy": {
    "description": "At(@)组件的分段策略。",
    "hint": "注意：通常 LLM 不会生成 At 组件，此选项仅对其他插件生成的 At 生效。",
    "type": "string",
    "options": ["单独", "跟随下段", "跟随上段", "嵌入"],
    "default": "跟随下段"
  },
  "face_strategy": {
    "description": "表情(Face)组件的分段策略。",
    "type": "string",
    "options": ["单独", "跟随下段", "跟随上段", "嵌入"],
    "default": "嵌入"
  },
  "other_media_strategy": {
    "description": "其他未知组件的分段策略。",
    "type": "string",
    "options": ["单独", "跟随下段", "跟随上段", "嵌入"],
    "default": "跟随下段"
  },
  "delay_strategy": {
    "description": "分段发送的延迟策略。",
    "hint": "Linear: 线性延迟(字数*系数); Log: 对数延迟; Random: 随机; Fixed: 固定。",
    "type": "string",
    "options": ["linear", "log", "random", "fixed"],
    "default": "linear"
  },
  "linear_base": {
    "description": "线性延迟的基础时间(秒)。",
    "type": "float",
    "default": 0.5
  },
  "linear_factor": {
    "description": "线性延迟的单字系数(秒/字)。",
    "type": "float",
    "default": 0.1
  },
  "log_base": {
    "description": "对数延迟的基础时间(秒)。",
    "type": "float",
    "default": 0.5
  },
  "log_factor": {
    "description": "对数延迟的系数。",
    "type": "float",
    "default": 0.8
  },
  "random_min": {
    "description": "随机延迟最小值(秒)。",
    "type": "float",
    "default": 1.0
  },
  "random_max": {
    "description": "随机延迟最大值(秒)。",
    "type": "float",
    "default": 3.0
  },
  "fixed_delay": {
    "description": "固定延迟时间(秒)。",
    "type": "float",
    "default": 1.5
  }
}
